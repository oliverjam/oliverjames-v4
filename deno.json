{
  "tasks": {
    "build": "deno run --allow-read --allow-write lib/build.js",
    "dev": "deno run --allow-read --allow-write --watch=styles,blog lib/build.js",
    "serve": "deno run --unstable --allow-read --allow-net lib/serve.js _site"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "jsx"
  },
  "importMap": "./import-map.json",
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["prefer-const"]
    }
  }
}
